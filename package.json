{
  "name": "chatse",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Marcus Rodrigues",
    "url": "https://mrodrigues.me"
  },
  "engines": {
    "pnpm": ">=9.0.0",
    "npm": "pnpm",
    "yarn": "pnpm",
    "node": ">=20.0.0"
  },
  "scripts": {
    "prepare": "pnpm dotnet:restore",
    "dotnet:restore": "pnpm -r restore",
    "dotnet:format": "pnpm -r format",
    "dotnet:format:check": "pnpm -r format:check",
    "lint": "eslint --ext mjs,js,ts,tsx --fix --cache",
    "lint:ci": "eslint --ext mjs,js,ts,tsx --max-warnings 0",
    "format": "prettier . --write && pnpm dotnet:format",
    "format:check": "prettier . --check && pnpm dotnet:format:check",
    "typecheck": "pnpm -r typecheck",
    "api": "pnpm --filter @chatse/api",
    "webv2": "pnpm --filter @chatse/webv2",
    "toolkit": "pnpm --filter @chatse/toolkit"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@types/node": "^20.12.11",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-relay": "^1.8.3",
    "eslint-plugin-tailwindcss": "^3.15.1",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "ts-node": "^10.9.2",
    "typescript": "5.4.4"
  }
}
