{
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": true,
    "panel": "dedicated",
    "showReuseMessage": true
  },
  "tasks": [
    {
      "label": "Launch dev terminals",
      "dependsOn": ["Web App", "API"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Web App",
      "type": "shell",
      "command": "nx serve web",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "API",
      "type": "shell",
      "command": "nx serve api",
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
